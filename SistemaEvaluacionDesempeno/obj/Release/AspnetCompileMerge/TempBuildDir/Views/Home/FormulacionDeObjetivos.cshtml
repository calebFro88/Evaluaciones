                              alert("Se han finalizado de formular los objetivos, han pasado a estado: Pendiente de revisar.");
                              //location.reload();
                          }
                      }
                  });
              }
          }

          function Refrescar(){
              $('#tblFormulacionObjetivos').data('kendoGrid').dataSource.read();
